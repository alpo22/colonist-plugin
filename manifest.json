{
  "manifest_version": 3,
  "name": "Colonist.io Ad Remover & Fullscreen",
  "version": "1.0",
  "description": "Remove ads and make colonist.io fullscreen",
  "content_scripts": [
    {
      "matches": ["*://*.colonist.io/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": []
}
